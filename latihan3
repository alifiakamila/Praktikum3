<script text="text/javascript">
     function tambah(){ 
      a=eval(document.form.a.value);
      b=eval(document.form.b.value);
      c=a+b;
      document.form.c.value=c; 
       }
</script> 
<script text="text/javascript">
       function kurang(){ 
      a=(document.form.a.value);
      b=(document.form.b.value);
      c=a-b;
      document.form.c.value=c; 
       }
</script>
<script text="text/javascript">
       function kali(){ 
      a=(document.form.a.value);
      b=(document.form.b.value);
      c=a*b;
      document.form.c.value=c; 
       }
</script> 
<script text="text/javascript">
       function bagi(){ 
      a=(document.form.a.value);
      b=(document.form.b.value);
      c=a/b;
      document.form.c.value=c; 
       }
</script> 
